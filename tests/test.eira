spell greet(name: TextWeave) {
    chant "Hello, ";
    chant name;
}

spell add(a: NumWeave, b: NumWeave) {
    mark sum = a + b;
    chant sum;
}

spell noParams() {
    chant "I have no parameters!";
}

chant "Test 1: Spell with one parameter";
greet("Alice");

chant "";
chant "Test 2: Spell with two parameters";
add(5, 7);

chant "";
chant "Test 3: Spell with no parameters";
noParams();